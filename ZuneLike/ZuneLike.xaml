<UserControl x:Class="ZuneLike.ZuneLike"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZuneLike"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <DoubleAnimation x:Key="FadeOutAnimation" From="1" To="0" Duration="0:0:1" Storyboard.TargetProperty="Opacity"/>
        <DoubleAnimation x:Key="FadeInAnimation" From="0" To="1" Duration="0:0:1"  Storyboard.TargetProperty="Opacity"/>
    </UserControl.Resources>

    <Grid x:Name="rootGrid">
        <Grid x:Name="containerGrid" />
    </Grid>
</UserControl>
